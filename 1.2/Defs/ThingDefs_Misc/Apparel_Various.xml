	</costList>

	<equippedStatOffsets>
		<HungerRateMultiplier>-0.1</HungerRateMultiplier>
	</equippedStatOffsets>

	<apparel>
		<bodyPartGroups>
			<li>Neck</li>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
		</bodyPartGroups>
	<layers>
		<li>OnSkin</li>
