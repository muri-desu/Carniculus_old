<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<PawnKindDef Name="BaseCarniPawnKind" Abstract="True">
	<race>Alien_Carniculus</race>
	<combatPower>60</combatPower>
	<isFighter>true</isFighter>
	<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
	<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
	<initialWillRange>1~3</initialWillRange>
	<initialResistanceRange>10~20</initialResistanceRange>
	<gearHealthRange>0.2~0.6</gearHealthRange>
	<xenotypeSet>
		<xenotypeChances>
			<Baseliner MayRequire="Ludeon.RimWorld.Biotech">999</Baseliner>
		</xenotypeChances>
		<warnIfTotalAbove1>false</warnIfTotalAbove1>
	</xenotypeSet>
</PawnKindDef>

<!-- player colonist プレイヤー -->
<PawnKindDef ParentName="BaseCarniPawnKind">
	<defName>CarniColonist</defName>
	<label>colonist</label>
	<defaultFactionType>CarniPlayerFaction</defaultFactionType>
	<backstoryFiltersOverride>
		<li>
			<categories>
				<li>CarniStory</li>
			</categories>
		</li>
	</backstoryFiltersOverride>
	</PawnKindDef>

<!-- Slave 奴隷 -->
<PawnKindDef ParentName="BaseCarniPawnKind">
	<defName>CarniSlave</defName>
	<label>slave</label>
	<defaultFactionType>OutlanderCivil</defaultFactionType>
	<backstoryFiltersOverride>
		<li>
			<categories>
				<li>CarniStory</li>
				<li>CarniFeral</li>
			</categories>
		</li>
	</backstoryFiltersOverride>
</PawnKindDef>

<!-- Wanderer -->
<PawnKindDef ParentName="BaseCarniPawnKind">
	<defName>CarniWanderer</defName>
	<label>wanderer</label>
	<defaultFactionType>OutlanderCivil</defaultFactionType>
	<backstoryFiltersOverride>
		<li>
			<categories>
				<li>CarniFeral</li>
			</categories>
		</li>
	</backstoryFiltersOverride>
</PawnKindDef>

<!-- npc -->
<PawnKindDef Name="BaseCarniPawnKind_NPC" Abstract="True" ParentName="BaseCarniPawnKind">
	<defaultFactionType>CarniNPCFaction</defaultFactionType>
	<techHediffsChance>0.40</techHediffsChance>
		<combatEnhancingDrugsChance>0.5</combatEnhancingDrugsChance>
		<combatEnhancingDrugsCount>1~2</combatEnhancingDrugsCount>
	<backstoryFiltersOverride>
		<li>
			<categories>
				<li>CarniFeral</li>
			</categories>
		</li>
	</backstoryFiltersOverride>
</PawnKindDef>

<!-- リーダー格 -->
<PawnKindDef ParentName="BaseCarniPawnKind_NPC">
	<defName>Carni_Boss</defName>
	<factionLeader>true</factionLeader>
	<label>alpha</label>
	<trader>true</trader>
	<combatPower>85</combatPower>
	<apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
	<apparelMoney>500~2500</apparelMoney>
	<invNutrition>3.55</invNutrition>
	<weaponMoney>350~3500</weaponMoney>
	<weaponTags>
		<li>Gun</li>
	</weaponTags>
	<techHediffsMoney>2000~3000</techHediffsMoney>
		<techHediffsTags>
			<li>Advanced</li>
			<li>AdvancedWeapon</li>
			<li>ImplantEmpireRoyal</li>
			<li>ImplantEmpireCommon</li>
		</techHediffsTags>
	<techHediffsDisallowTags>
		<li>PainCauser</li>
	</techHediffsDisallowTags>
		<biocodeWeaponChance>0.2</biocodeWeaponChance>
	<apparelRequired>
		<li>Apparel_CarniFleshHelm</li>
		<li>Apparel_CarniFleshArmor</li>
	</apparelRequired>
</PawnKindDef>

<!-- basic worker -->
<PawnKindDef ParentName="BaseCarniPawnKind_NPC">
	<defName>Carni_Worker</defName>
	<label>worker</label>
	<apparelTags>
		<li>CarniApparel</li>
	</apparelTags>
	<apparelMoney>200~400</apparelMoney>
	<apparelAllowHeadgearChance>0.4</apparelAllowHeadgearChance>
	<weaponTags>
		<li>Gun</li>
		<li>MedievalMeleeBasic</li>
		<li>GrenadeDestructive</li>
		<li>GrenadeFlame</li>
	</weaponTags>
	<weaponMoney>255~3500</weaponMoney>
</PawnKindDef>

